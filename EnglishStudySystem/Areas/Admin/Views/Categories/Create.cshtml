@model EnglishStudySystem.Areas.Admin.ViewModel.CategoryCreateViewModel

@{
    ViewBag.Title = "Thêm mới Danh mục";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white mb-0" style="background: linear-gradient(135deg, #2c3e50, #3498db); padding: 10px 20px; border-radius: 8px;">
            <i class="fas fa-folder-plus me-2"></i>@ViewBag.Title
        </h2>
        @Html.ActionLink("Quay lại Danh sách", "Index", null, new { @class = "btn btn-primary" })
    </div>

    <div class="card shadow-sm" style="border: none; border-radius: 10px; overflow: hidden;">
        <div class="card-header text-white py-3" style="background: linear-gradient(135deg, #3498db, #2ecc71);">
            <h4 class="mb-0">
                <i class="fas fa-info-circle me-2"></i>Thông tin danh mục
            </h4>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="card-body" style="background-color: #f8f9fa;">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label fw-bold", style = "color: #3498db;" })
                            <div class="input-group">
                                <span class="input-group-text text-white" style="background-color: #3498db;">
                                    <i class="fas fa-tag"></i>
                                </span>
                                @Html.EditorFor(model => model.Name, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   placeholder = "Nhập tên danh mục",
                                   style = "border-left: none;"
                               }
                           })
                            </div>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "form-label fw-bold", style = "color: #3498db;" })
                            <div class="input-group" style="max-width: 250px;">
                                <span class="input-group-text text-white" style="background-color: #3498db;">
                                    <i class="fas fa-dollar-sign"></i>
                                </span>
                                @Html.EditorFor(model => model.Price, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control",
                                        placeholder = "0.00",
                                        style = "border-left: none;"
                                    }
                                })
                            </div>
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label fw-bold", style = "color: #3498db;" })
                    <div class="input-group">
                        <span class="input-group-text text-white align-items-start pt-2" style="background-color: #3498db;">
                            <i class="fas fa-align-left"></i>
                        </span>
                        @Html.TextAreaFor(model => model.Description, new
                        {
                            @class = "form-control",
                            rows = 4,
                            placeholder = "Nhập mô tả danh mục",
                            style = "min-height: 120px; resize: vertical; border-left: none;"
                        })
                    </div>
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger small mt-1 d-block" })
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success px-4 py-2">
                        <i class="fas fa-plus-circle me-2"></i>Thêm mới
                    </button>
                    <button type="reset" class="btn btn-outline-secondary ms-2 px-4 py-2">
                        <i class="fas fa-undo me-2"></i>Nhập lại
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .form-label {
            font-size: 0.9rem;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }

        .input-group-text {
            min-width: 40px;
            justify-content: center;
        }

        .btn-success {
            background-color: #2ecc71;
            border-color: #2ecc71;
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 8px;
            border: none;
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}