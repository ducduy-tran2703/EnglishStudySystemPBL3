@model EnglishStudySystem.Models.Category

@{
    ViewBag.Title = "Thêm mới Danh mục";
    // Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@* Form sẽ submit đến Action Create (POST) trong cùng Controller *@
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken() @* Bảo vệ chống tấn công CSRF *@

    <div class="form-horizontal">
        @* Sử dụng class Bootstrap cho form *@
        <h4>Danh mục</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" }) @* Hiển thị tóm tắt lỗi validation *@

        @* Trường nhập Tên danh mục *@
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" }) @* Label *@
            <div class="col-md-10">
                @* Input field *@
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" }) @* Hiển thị lỗi validation cho trường này *@
            </div>
        </div>

        @* Trường nhập Mô tả *@
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5 }) @* Sử dụng TextArea cho mô tả dài *@
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        @* Trường nhập Giá *@
        <div class="form-group">
            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } }) @* Sử dụng EditorFor, có thể cần DataType.Currency trong Model nếu muốn input type="number" *@
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>


        @* Nút Submit *@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@* Liên kết trở lại trang danh sách *@
<div>
    @Html.ActionLink("Quay lại Danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval") @* Bao gồm script cho client-side validation *@
}