@model EnglishStudySystem.Models.Category

@{
    ViewBag.Title = "Chỉnh sửa Danh mục";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white mb-0" style="background: linear-gradient(135deg, #2c3e50, #3498db); padding: 10px 20px; border-radius: 8px;">
            <i class="fas fa-edit me-2"></i>@ViewBag.Title
        </h2>
        <div>
            @Html.ActionLink("Hủy", "Details", new { id = Model.Id }, new { @class = "btn btn-outline-secondary" })
            @if (Model.IsDeleted)
            {
                @Html.ActionLink("Quay lại Danh sách đã xóa", "DeletedIndex", null, new { @class = "btn btn-dark ms-2" })
            }
            else
            {
                @Html.ActionLink("Quay lại Danh sách", "Index", null, new { @class = "btn btn-primary ms-2" })
            }
        </div>
    </div>

    <div class="card shadow-sm" style="border: none; border-radius: 10px; overflow: hidden;">
        <div class="card-header text-white py-3" style="background: linear-gradient(135deg, #3498db, #2ecc71);">
            <h4 class="mb-0">
                <i class="fas fa-folder me-2"></i>Thông tin danh mục
            </h4>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)

            <div class="card-body" style="background-color: #f8f9fa;">
                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "form-label fw-bold", style = "color: #3498db;" })
                            <div class="input-group">
                                <span class="input-group-text text-white" style="background-color: #3498db;">
                                    <i class="fas fa-tag"></i>
                                </span>
                                @Html.EditorFor(model => model.Name, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   style = "border-left: none;"
                               }
                           })
                            </div>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "form-label fw-bold", style = "color: #3498db;" })
                            <div class="input-group">
                                <span class="input-group-text text-white" style="background-color: #3498db;">
                                    <i class="fas fa-dollar-sign"></i>
                                </span>
                                @Html.EditorFor(model => model.Price, new
                           {
                               htmlAttributes = new
                               {
                                   @class = "form-control",
                                   style = "border-left: none;"
                               }
                           })
                            </div>
                            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">
                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "form-label fw-bold", style = "color: #3498db;" })
                    <div class="input-group">
                        <span class="input-group-text text-white align-items-start pt-2" style="background-color: #3498db;">
                            <i class="fas fa-align-left"></i>
                        </span>
                        @Html.TextAreaFor(model => model.Description, new
                        {
                            @class = "form-control",
                            rows = 5,
                            style = "border-left: none; min-height: 120px; resize: vertical;"
                        })
                    </div>
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger small" })
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                    <button type="reset" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-undo me-2"></i>Nhập lại
                    </button>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .form-label {
            font-size: 0.9rem;
            text-transform: uppercase;
            margin-bottom: 0.5rem;
        }

        .input-group-text {
            min-width: 40px;
            justify-content: center;
        }

        .btn-success {
            background-color: #2ecc71;
            border-color: #2ecc71;
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }

        .btn-dark {
            background-color: #2c3e50;
            border-color: #2c3e50;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
            border-radius: 8px;
            border: none;
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}