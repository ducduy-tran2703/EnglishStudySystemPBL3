@model IEnumerable<EnglishStudySystem.Models.Category>

@{
    ViewBag.Title = "Danh mục đã xóa mềm";
    // Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @* Liên kết trở lại trang danh sách đang hoạt động *@
    @Html.ActionLink("Xem Danh mục đang hoạt động", "Index", null, new { @class = "btn btn-secondary" })
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeletedAt) @* Hiển thị thời gian xóa *@
            </th>
            <th></th> @* Cột cho các hành động *@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @String.Format("{0:C}", item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeletedAt) @* Hiển thị thời gian xóa *@
                </td>
                <td>
                    @* Các liên kết hành động *@
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) | @* Có thể xem chi tiết bản ghi đã xóa *@
                    @* Có thể thêm liên kết Edit nếu muốn cho phép sửa cả khi đã xóa mềm *@

                    @* Form cho Khôi phục (sử dụng POST) *@
                    @using (Html.BeginForm("Restore", "Categories", new { id = item.Id }, FormMethod.Post, new { @style = "display:inline;" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Bạn có chắc chắn muốn khôi phục danh mục này?');">Khôi phục</button>
                    } |

                    @* Form cho Xóa hoàn toàn (sử dụng POST) *@
                    @using (Html.BeginForm("HardDelete", "Categories", new { id = item.Id }, FormMethod.Post, new { @style = "display:inline;" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('CẢNH BÁO: Bạn có chắc chắn muốn XÓA VĨNH VIỄN danh mục này? Thao tác không thể hoàn tác!');">Xóa vĩnh viễn</button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>