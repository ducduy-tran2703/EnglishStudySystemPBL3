@using EnglishStudySystem.Areas.Admin.ViewModel 
@model DashboardViewModel
@{
    ViewBag.Title = "Thống Kê Hệ Thống";
    //Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml"; // Đường dẫn đến layout của bạn
}

<div class="container-fluid px-4">
    <h1 class="mt-4">@ViewBag.Title</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Tổng quan thống kê</li>
    </ol>

    <div class="row">
        <!-- Thống kê người dùng -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Thống kê người dùng
                            </div>
                            <div class="stats-item mb-2">
                                <div class="h6 mb-0 font-weight-normal text-gray-800">Tổng số Customer:</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UserStats.TotalCustomers</div>
                            </div>
                            <div class="stats-item mb-3">
                                <div class="h6 mb-0 font-weight-normal text-gray-800">Tổng số Editor:</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.UserStats.TotalEditors</div>
                            </div>
                            @if (Model.UserStats.TopCustomer != null)
                            {
                                <div class="stats-item border-top pt-2">
                                    <div class="h6 mb-1 font-weight-bold text-gray-700">Học viên mua nhiều nhất:</div>
                                    <p class="mb-0 small"><strong>Tên:</strong> @Model.UserStats.TopCustomer.Name</p>
                                    <p class="mb-0 small"><strong>Số lần mua:</strong> @Model.UserStats.TopCustomer.TotalPurchases</p>
                                    <p class="mb-0 small"><strong>Tổng chi tiêu:</strong> @string.Format("{0:N0}", Model.UserStats.TopCustomer.TotalSpent) đ</p>
                                    @if (Model.UserStats.TopCustomer.PurchasedCategories != null && Model.UserStats.TopCustomer.PurchasedCategories.Any())
                                    {
                                        <p class="mb-0 small"><strong>Danh mục đã mua:</strong> @string.Join(", ", Model.UserStats.TopCustomer.PurchasedCategories.Select(c => c.Name))</p>
                                    }
                                    else
                                    {
                                        <p class="mb-0 small"><strong>Danh mục đã mua:</strong> Chưa có.</p>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="stats-item border-top pt-2">
                                    <div class="h6 mb-1 font-weight-bold text-gray-700">Học viên mua nhiều nhất:</div>
                                    <p class="mb-0 small">Chưa có dữ liệu.</p>
                                </div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê doanh thu -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Thống kê doanh thu
                            </div>
                            <div class="stats-item mb-2">
                                <div class="h6 mb-0 font-weight-normal text-gray-800">Tổng doanh thu:</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@string.Format("{0:N0}", Model.RevenueStats.TotalRevenue) đ</div>
                            </div>
                            <div class="stats-item mb-2">
                                <div class="h6 mb-0 font-weight-normal text-gray-800">Doanh thu tháng này:</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@string.Format("{0:N0}", Model.RevenueStats.MonthlyRevenue) đ</div>
                            </div>
                            <div class="stats-item">
                                <div class="h6 mb-0 font-weight-normal text-gray-800">Doanh thu năm nay:</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@string.Format("{0:N0}", Model.RevenueStats.YearlyRevenue) đ</div>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê danh mục -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Thống kê danh mục
                            </div>
                            <div class="stats-item mb-3">
                                <div class="h6 mb-0 font-weight-normal text-gray-800">Tổng số danh mục:</div>
                                <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.LessonStats.TotalCategories</div>
                            </div>
                            @if (Model.LessonStats.MostPopularCategory != null)
                            {
                                <div class="stats-item border-top pt-2 mb-2">
                                    <div class="h6 mb-1 font-weight-bold text-gray-700">Danh mục phổ biến nhất:</div>
                                    <p class="mb-0 small"><strong>Tên:</strong> @Model.LessonStats.MostPopularCategory.Name</p>
                                    <p class="mb-0 small"><strong>Số lần mua:</strong> @Model.LessonStats.MostPopularCategory.TotalPurchases</p>
                                    <p class="mb-0 small"><strong>Doanh thu:</strong> @string.Format("{0:N0}", Model.LessonStats.MostPopularCategory.Revenue) đ</p>
                                </div>
                            }
                            else
                            {
                                <div class="stats-item border-top pt-2 mb-2">
                                    <div class="h6 mb-1 font-weight-bold text-gray-700">Danh mục phổ biến nhất:</div>
                                    <p class="mb-0 small">Chưa có dữ liệu.</p>
                                </div>
                            }
                            @if (Model.LessonStats.MostProfitableCategory != null)
                            {
                                <div class="stats-item border-top pt-2">
                                    <div class="h6 mb-1 font-weight-bold text-gray-700">Danh mục sinh lời nhất:</div>
                                    <p class="mb-0 small"><strong>Tên:</strong> @Model.LessonStats.MostProfitableCategory.Name</p>
                                    <p class="mb-0 small"><strong>Doanh thu:</strong> @string.Format("{0:N0}", Model.LessonStats.MostProfitableCategory.Revenue) đ</p>
                                </div>
                            }
                            else
                            {
                                <div class="stats-item border-top pt-2">
                                    <div class="h6 mb-1 font-weight-bold text-gray-700">Danh mục sinh lời nhất:</div>
                                    <p class="mb-0 small">Chưa có dữ liệu.</p>
                                </div>
                            }
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-book-open fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Biểu đồ doanh thu -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Biểu đồ doanh thu theo tháng</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area" style="height: 320px;">
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê editor -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-danger">Thống kê Editor</h6>
                </div>
                <div class="card-body">
                    @if (Model.EditorStats != null && Model.EditorStats.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Tên Editor</th>
                                        <th class="text-center">DS mục</th>
                                        <th class="text-right">Doanh thu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var editor in Model.EditorStats.OrderByDescending(e => e.TotalRevenue).Take(5))
                                    {
                                        <tr>
                                            <td>@editor.EditorName</td>
                                            <td class="text-center">@editor.TotalCategoriesCreated</td>
                                            <td class="text-right">@string.Format("{0:N0}", editor.TotalRevenue) đ</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        if (Model.EditorStats.Count > 5)
                        {
                            <div class="text-center mt-2">
                                <a href="#">Xem tất cả Editors →</a> @* Placeholder link *@
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted mt-3">Không có dữ liệu editor để hiển thị.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script> @* Sử dụng phiên bản Chart.js cụ thể hơn *@
    <script>
        $(document).ready(function () {
            // Biểu đồ doanh thu
            var ctxRevenue = document.getElementById('revenueChart');
            if (ctxRevenue) {
                ctxRevenue = ctxRevenue.getContext('2d');
                var chartData = {
                    labels: [],
                    datasets: [{
                        label: 'Doanh thu (VND)',
                        data: [],
                        backgroundColor: 'rgba(78, 115, 223, 0.2)', // Primary color with opacity
                        borderColor: 'rgba(78, 115, 223, 1)',     // Primary color
                        borderWidth: 2,
                        tension: 0.3, // Cho đường line mềm mại hơn
                        fill: true
                    }]
                };

                @if (Model.RevenueStats != null && Model.RevenueStats.RevenueByMonth != null && Model.RevenueStats.RevenueByMonth.Any())
                {
                    <text>
                    chartData.labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.RevenueStats.RevenueByMonth.Select(x => x.Month)));
                    chartData.datasets[0].data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.RevenueStats.RevenueByMonth.Select(x => x.Revenue)));
                    </text>
                }

                new Chart(ctxRevenue, {
                    type: 'line', // Đổi thành 'line' cho đẹp hơn
                    data: chartData,
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            x: {
                                grid: {
                                    display: false // Ẩn lưới trục X
                                }
                            },
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) {
                                        return value.toLocaleString('vi-VN') + ' đ'; // Định dạng tiền tệ Việt Nam
                                    }
                                },
                                grid: {
                                    color: "rgba(234, 236, 244, 1)", // Màu lưới trục Y
                                    zeroLineColor: "rgba(234, 236, 244, 1)",
                                    borderDash: [2],
                                    zeroLineBorderDash: [2]
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false // Ẩn legend nếu chỉ có 1 dataset
                            },
                            tooltip: {
                                backgroundColor: "rgb(255,255,255)",
                                bodyColor: "#858796",
                                titleColor: '#6e707e',
                                titleFont: { size: 14, weight: 'bold'},
                                bodyFont: { size: 12 },
                                borderColor: '#dddfeb',
                                borderWidth: 1,
                                padding: 15,
                                displayColors: false,
                                callbacks: {
                                    label: function(context) {
                                        return context.parsed.y.toLocaleString('vi-VN') + ' đ';
                                    }
                                }
                            }
                        },
                        elements: {
                            point:{
                                radius: 3, // Kích thước điểm trên line chart
                                hoverRadius: 4
                            }
                        }
                    }
                });
            }
        });
    </script>
}

