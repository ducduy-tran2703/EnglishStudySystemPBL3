@model EnglishStudySystem.Models.ProfileViewModel 

@{
    ViewBag.Title = "Hồ sơ người dùng";
}

<div class="container mt-4">
    <h2>@ViewBag.Title</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Thông tin cá nhân</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
                    {
                        <div class="alert alert-success" role="alert">@ViewBag.StatusMessage</div>
                    }

                    <dl class="row mb-0">
                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.UserName):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.UserName)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.Email):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(m => m.Email)</dd>
                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <dt class="col-sm-4">@Html.DisplayNameFor(m => m.PhoneNumber):</dt>
                            <dd class="col-sm-8">@Html.DisplayFor(m => m.PhoneNumber)</dd>
                        }
                        else
                        {
                            <dt class="col-sm-4">Số điện thoại:</dt>
                            <dd class="col-sm-8"><span class="text-muted">Chưa có số điện thoại.</span></dd>
                        }

                        @* Thêm các trường khác nếu bạn có trong ProfileViewModel *@
                        @* <dt class="col-sm-4">@Html.DisplayNameFor(m => m.FullName):</dt> *@
                        @* <dd class="col-sm-8">@Html.DisplayFor(m => m.FullName)</dd> *@
                    </dl>
                </div>
                <div class="card-footer text-end">
                    @Html.ActionLink("Thay đổi mật khẩu", "ChangePassword", "Manage", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-primary me-2" })
                    @Html.ActionLink("Quản lý thông tin khác", "Index", "Manage", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-secondary" }) @* Liên kết này có thể dẫn đến các cài đặt quản lý khác nếu bạn muốn *@
                </div>
            </div>
        </div>
    </div>

    <p class="mt-3 text-center">
        @Html.ActionLink("Quay lại trang chủ", "Index", "Home", null, new { @class = "btn btn-link" })
    </p>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}