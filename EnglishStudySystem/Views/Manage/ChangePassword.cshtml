@model EnglishStudySystem.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<head>
    <link href="~/Content/CSS/RegisterStyle.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> @* THÊM DÒNG NÀY *@
</head>

<div class="register-form-wrapper">

    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <hr />

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Your old password" })
            </div>
            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Your new password" })
            </div>
            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Comfirm your new password" })
            </div>
            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
        </div>

        <div class="form-submit">
            <input type="submit" value="Đổi mật khẩu" class="btn btn-submit" />
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
        $(document).ready(function () {
            // Lấy thông báo từ TempData nếu có
var successMessage = '@Html.Raw(HttpUtility.HtmlDecode(TempData["SuccessMessage"]?.ToString()))';
var errorMessage = '@Html.Raw(HttpUtility.HtmlDecode(TempData["ErrorMessage"]?.ToString()))';

            if (successMessage && successMessage !== '') {
                Swal.fire({
                    title: 'Thành công!',
                    text: successMessage,
                    icon: 'success',
                    confirmButtonText: 'Đóng'
                });
            }

            if (errorMessage && errorMessage !== '') {
                Swal.fire({
                    title: 'Lỗi!',
                    text: errorMessage,
                    icon: 'error',
                    confirmButtonText: 'Đóng'
                });
            }
        });
</script>
}