<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hệ thống Tự học Tiếng Anh</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm" style="border: 3px solid #28a745; border-radius: 5px;">
        <div class="container-fluid">
            <!-- Brand & Navigation Items -->
            <div class="d-flex align-items-center">
                <a class="navbar-brand fw-bold d-flex align-items-center me-4" href="#">
                    <i class="fas fa-globe fs-4 me-2 text-success"></i>
                    <span>ESystem</span>
                </a>

                <div class="d-flex">
                    <a href="#" class="nav-link me-3">
                        <i class="fas fa-home me-1"></i> Trang chủ
                    </a>

                    <!-- Danh mục Dropdown -->
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" data-bs-toggle="dropdown">
                            <i class="fas fa-list me-1"></i> Danh mục
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Hệ thống</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-chart-line me-2"></i>Báo cáo</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-users me-2"></i>Người dùng</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-tools me-2"></i>Cài đặt</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Search Bar (Center) -->
            <div class="search-bar mx-auto" style="width: 40%;">
                <div class="input-group">
                    <input type="text" class="form-control border-success" placeholder="Tìm kiếm..." style="border-radius: 20px 0 0 20px;">
                    <button class="btn btn-success" type="button" style="border-radius: 0 20px 20px 0;">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <!-- User Actions -->
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-success me-2">
                    <i class="fas fa-sign-in-alt me-1"></i> Đăng nhập
                </button>
                <button class="btn btn-success">
                    <i class="fas fa-user-plus me-1"></i> Đăng ký
                </button>
            </div>
        </div>
    </nav>
</header>
<body>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - English Study System. All rights reserved.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>

<style>
    /* Navbar styling */
    .navbar {
        padding: 0.5rem 1rem;
    }

    .navbar-brand {
        font-size: 1.2rem;
        color: #28a745 !important;
    }

    /* Navigation links */
    .nav-link {
        color: #495057 !important;
        font-weight: 500;
        padding: 0.5rem 1rem !important;
    }

        .nav-link:hover, .nav-link:focus {
            color: #28a745 !important;
        }

    .dropdown-toggle::after {
        vertical-align: middle;
    }

    /* Search bar */
    .search-bar .form-control:focus {
        border-color: #28a745;
        box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
    }

    /* Dropdown */
    .dropdown-menu {
        margin-top: 8px;
        border: 1px solid rgba(0, 0, 0, 0.1);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .dropdown-item {
        padding: 0.5rem 1.5rem;
    }

        .dropdown-item:hover {
            background-color: #e9f7ef;
            color: #28a745;
        }

    /* Responsive */
    @@media (max-width: 991.98px) {
        .search-bar {
            width: 100% !important;
            margin: 1rem 0;
            order: 3;
        }

        .navbar-collapse {
            padding: 1rem 0;
        }

        .d-flex {
            flex-direction: column;
            width: 100%;
        }
    }
</style>
</html>