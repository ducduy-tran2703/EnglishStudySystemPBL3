@model EnglishStudySystem.Models.ApplicationUser
@{
    ViewBag.Title = "Chỉnh sửa thông tin cá nhân";
}

<head>
    <link href="~/Content/CSS2/DetailUserStyle.css" rel="stylesheet" />
    <link href="~/Content/CSS2/EditProfileStyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>

<div class="detail-user-wrapper">
    <div class="detail-user-info-group">
        <h2 class="detail-user-header">@ViewBag.Title</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="detail-user-info-group">
                <div class="detail-user-info-item">
                    <div class="detail-user-info-label"><i class="fas fa-signature"></i> Full name</div>
                    <div class="detail-user-info-value">
                        <input asp-for="FullName" class="edit-form-control edit-input" style="border:none; width: 100%;" />
                    </div>
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="detail-user-info-item">
                    <div class="detail-user-info-label"><i class="fas fa-envelope"></i> Email</div>
                    <div class="detail-user-info-value">
                        <input asp-for="Email" class="edit-form-control edit-input" style="border:none; width: 100%;" />
                    </div>

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="detail-user-info-item">
                    <div class="detail-user-info-label"><i class="fas fa-phone"></i> Phone Number</div>
                    <div class="detail-user-info-value">
                        <input asp-for="PhoneNumber" class="edit-form-control edit-input" style="border:none; width: 100%;" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="detail-user-info-item">
                    <div class="detail-user-info-label"><i class="fas fa-user"></i> Date of birth</div>
                    <div class="detail-user-info-value">
                        <input asp-for="Dateofbirth" class="edit-form-control edit-input"  style="border:none; width: 100%;" />
                    </div>
                    <span asp-validation-for="Dateofbirth" class="text-danger"></span>
                </div>
                <div class="form-actions">
                    <button type="submit" class="detail-user-btn detail-user-btn-edit">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                    <a href="@Url.Action("DetailUser")" class="detail-user-btn detail-user-btn-edit">
                        <i class="fas fa-times"></i> Hủy bỏ
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>



    @section Scripts {
        <script>
            // Hiển thị preview khi chọn ảnh mới
            document.querySelector('.avatar-upload-input').addEventListener('change', function (e) {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        document.getElementById('avatarPreview').src = e.target.result;
                    }
                    reader.readAsDataURL(file);
                }
            });
        </script>
    }
